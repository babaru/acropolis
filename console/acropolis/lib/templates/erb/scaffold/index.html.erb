<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2><%%= t('activerecord.text.instances_list', model: <%= class_name.split('::').last %>.model_name.human) %></h2>
        <ol class="breadcrumb">
            <li>
                <%%= link_to t('text.home'), root_path %>
            </li>
            <li class="active">
                <strong><%%= t('activerecord.text.instances_list', model: <%= class_name.split('::').last %>.model_name.human) %></strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2"></div>
</div>

<div class="wrapper wrapper-content">
  <div class="row">
      <div class="col-lg-12 m-b-md">
          <%%= link_to t('activerecord.text.new_instance', model: <%= class_name.split('::').last %>.model_name.human), new_<%= singular_table_name %>_path, class: 'btn-primary btn-w-m btn' %>
      </div>
  </div>
    <div class="row">
        <div class="col-lg-10">
            <div class="ibox">
                <div class="ibox-content">

                    <div class="table-responsive">
                        <%%= render partial: '<%= plural_table_name %>_grid' %>
                    </div>
                </div>

            </div>
        </div>

        <div class="col-lg-2">
            <div class="ibox">
                <div class="ibox-title">
                    <h5><%%= t('labels.search') %></h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content" style="display: block;">
                    <%%= render 'search_form' %>
                </div>
            </div>
        </div>

    </div>
</div>
