<%% hide_sidebar = false if local_assigns[:hide_sidebar].nil? %>

<%% content_for :plate_title_panel do %>

<%%= render partial: '<%= class_name.split('::').last.underscore.downcase.pluralize %>_title_panel' %>

<%% end %>

<%% unless hide_sidebar %>

<%% content_for :sidebar do %>

<%%= render partial: '<%= class_name.split('::').last.underscore.downcase.pluralize %>_sidebar_menu' %>

<%% end %>

<%% end %>

<%% content_for :anything_else do %>

<!-- Modal -->

<div class="modal fade" id="item-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
</div><!-- /.modal -->

<%% end %>

<div class="page-header">
  <div class="row">
    <div class="col-sm-6">
      <h2><%%= t('models.list', model: <%= class_name.split('::').last %>.model_name.human) %></h2>
    </div>
    <div class="col-sm-6">
      <div class="btn-toolbar">
        <div class="btn-group pull-right">
          <%%= link_to(fa_icon('plus', text: t('models.new', model: <%= class_name.split('::').last %>.model_name.human)), new_<%= class_name.split('::').last.underscore.downcase %>_path, remote: true, class: 'btn btn-primary') %>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="item-list">

  <%%= render '<%= class_name.split('::').last.underscore.downcase.pluralize %>_grid' %>

</div>