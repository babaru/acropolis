<div class="btn-toolbar">
  <div class="btn-group pull-right" style="position: relative; top: 28px;">
      <%%= link_to(fa_icon('plus-square', text: t('models.add', model: <%= class_name %>.model_name.human)), new_<%= singular_table_name %>_path, remote: true, class: 'btn btn-primary') %>
