<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2><%%= t('activerecord.text.show_instance', model: <%= class_name.split('::').last %>.model_name.human) %></h2>
        <ol class="breadcrumb">
            <li>
                <%%= link_to t('text.home'), root_path %>
            </li>
            <li class="active">
                <strong><%%= t('activerecord.text.show_instance', model: <%= class_name.split('::').last %>.model_name.human) %></strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="ibox">
        <div class="ibox-content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="m-b-md">
                        <div class="pull-right">
                          <%%= link_to fa_icon('pencil', text: t('buttons.edit')), edit_<%= plural_name.singularize %>_path(@<%= plural_name.singularize %>), class: 'btn btn-white btn-sm' %>
                        </div>

                        <h2><%%= @<%= plural_name.singularize %>.name %></h2>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-5">
                    <dl class="dl-horizontal">
                        <dt>Field1: </dt>
                        <dd>Value</dd>
                    </dl>
                </div>
                <div class="col-lg-7">
                    <dl class="dl-horizontal">
                        <dt>Field2: </dt>
                        <dd>Value</dd>
                    </dl>
                </div>
            </div>

            <div class="row m-t-sm">
                <div class="col-lg-12">
                    <div class="panel blank-panel">
                        <div class="panel-heading">
                            <div class="panel-options">
                                <ul class="nav nav-tabs">
                                    <%% @tabs.each do |tab| %>
                                    <%% if @current_tab == tab %>
                                    <li class="active">
                                    <%% else %>
                                    <li class="">
                                    <%% end %>
                                      <%%= link_to t("activerecord.attributes.<%= plural_name.singularize %>.tabs.#{tab}"), <%= plural_name.singularize %>_path(@<%= plural_name.singularize %>, tab: tab) %>
                                    </li>
                                    <%% end %>
                                </ul>
                            </div>
                        </div>

                        <div class="panel-body">

                            <div class="tab-content">
                                <%% @tabs.each do |tab| %>
                                <%% if @current_tab == tab %>
                                <div class="tab-pane active">
                                <%% else %>
                                <div class="tab-pane">
                                <%% end %>
                                    <%%= render "show_tab_#{tab}" if tab == @current_tab %>
                                </div>
                                <%% end %>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
