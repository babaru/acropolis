<%%= simple_form_for(@<%= singular_table_name %>, remote: true, html: {class: 'form-horizontal'}) do |f| %>

  <div class="modal-body">

  <%%= f.error_notification %>

  <% for attribute in class_name.constantize.columns -%>
    <% if attribute.name != "id" && attribute.name !="created_at" && attribute.name !="updated_at" %>
    <%%= f.input :<%= attribute.name %> %>
    <% end -%>
  <% end -%>

  </div>

  <div class="modal-footer">

  <%%= link_to t('buttons.cancel'), "#", class: "btn btn-default btn-sm", data: {dismiss: "modal"} %>
  <%%= f.submit t('buttons.save_changes'), class: 'btn btn-primary btn-sm' %>

  </div>

<%% end %>

