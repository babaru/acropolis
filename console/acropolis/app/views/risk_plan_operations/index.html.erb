<% hide_sidebar = false if local_assigns[:hide_sidebar].nil? %>

<% content_for :plate_title_panel do %>

<%= render partial: 'risk_plans/risk_plan_panel' %>

<% end %>

<% unless hide_sidebar %>

<% content_for :sidebar do %>

<%= render partial: 'risk_plans/risk_plan_sidebar_menu' %>

<% end %>

<% end %>

<% content_for :anything_else do %>

<!-- Modal -->

<div class="modal fade" id="risk-plan-operation-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
</div><!-- /.modal -->

<% end %>

<div class="page-header">
  <h2><%= @risk_plan.name %></h2>
</div>

<div class="btn-toolbar">
  <div class="btn-group pull-right">
    <%= link_to(fa_icon('plus', text: t('models.add', model: RiskPlanOperation.model_name.human)), new_risk_plan_operation_path(risk_plan_id: @risk_plan), remote: true, class: 'btn btn-primary btn-sm') %>
  </div>
</div>

<p></p>

<div id="risk-plan-operation-list">

  <%= render 'risk_plan_operations_grid' %>

</div>