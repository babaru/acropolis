<%= simple_form_for(@product_risk_plan, remote: true, html: {class: 'form-horizontal'}) do |f| %>

  <div class="modal-body">

  <%= f.error_notification %>

    <%= f.input :product_id, as: :hidden %>

    <%= f.input :risk_plan_id, collection: RiskPlan.all.collect {|p| [p.name, p.id]}  %>

    <%= f.input :is_enabled %>

  </div>

  <div class="modal-footer">

  <%= link_to t('buttons.cancel'), "#", class: "btn btn-default btn-sm", data: {dismiss: "modal"} %>
  <%= f.submit t('buttons.save_changes'), class: 'btn btn-primary btn-sm' %>

  </div>

<% end %>

