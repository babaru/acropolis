<%= grid(@product_risk_plans_grid, :show_filters => :when_filtered) do |g|
  g.column :name => t('activerecord.attributes.product_risk_plan.id'), :html => {:class => "grid-cell"} do |product_risk_plan|
    product_risk_plan.id
  end
  g.column :name => t('activerecord.attributes.product_risk_plan.product_id'), :html => {:class => "grid-cell"} do |product_risk_plan|
    product_risk_plan.product_id
  end
  g.column :name => t('activerecord.attributes.product_risk_plan.risk_plan_id'), :html => {:class => "grid-cell"} do |product_risk_plan|
    product_risk_plan.risk_plan_id
  end
  g.column :name => t('activerecord.attributes.product_risk_plan.is_enabled'), :html => {:class => "grid-cell"} do |product_risk_plan|
    product_risk_plan.is_enabled
  end
  g.column :name => t('activerecord.attributes.product_risk_plan.created_at'), :html => {:class => "grid-cell"} do |product_risk_plan|
    product_risk_plan.created_at
  end
  g.column :name => t('activerecord.attributes.product_risk_plan.updated_at'), :html => {:class => "grid-cell"} do |product_risk_plan|
    product_risk_plan.updated_at
  end


  g.column html: {class: 'btn-cell'} do |product_risk_plan|
    link_to fa_icon("pencil"), edit_product_risk_plan_path(product_risk_plan), class: 'btn btn-default btn-xs', remote: true, data: {toggle: 'tooltip'}, title: t('buttons.edit')
  end

  g.column html: {class: 'btn-cell'} do |product_risk_plan|
    link_to fa_icon("trash"), product_risk_plan_path(product_risk_plan), class: 'btn btn-danger btn-xs', remote: true, data: {toggle: 'tooltip'}, title: t('buttons.delete')
  end
end -%>
