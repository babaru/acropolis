<%= grid(@product_risk_plans_grid, :show_filters => :when_filtered) do |g|
  g.column name: '#' do |product_risk_plan|
    product_risk_plan.id
  end

  g.column name: t('activerecord.attributes.product_risk_plan.risk_plan_id') do |product_risk_plan|
    product_risk_plan.risk_plan.name
  end
  g.column name: t('activerecord.attributes.product_risk_plan.is_enabled') do |product_risk_plan|
    link_to(check_box_tag("checkbox-#{product_risk_plan.id}", nil, product_risk_plan.is_enabled, data: {toggle: 'switch'}), product_risk_plan_enable_path(product_risk_plan), method: :post, remote: true)
  end

  g.column html: {class: 'btn-cell'} do |product_risk_plan|
    link_to fa_icon("pencil"), edit_product_risk_plan_path(product_risk_plan), class: 'btn btn-default btn-xs', remote: true, data: {toggle: 'tooltip'}, title: t('buttons.edit')
  end

  g.column html: {class: 'btn-cell'} do |product_risk_plan|
    link_to fa_icon("trash"), product_risk_plan_path(product_risk_plan), class: 'btn btn-danger btn-xs', remote: true, data: {toggle: 'tooltip'}, title: t('buttons.delete')
  end
end -%>
