<%= simple_form_for(@risk_plan, html: {class: 'form-horizontal'}) do |f| %>

  <%= f.error_notification %>

  <%= f.input :parameter_id %>

  <%= f.input :user_id %>


  <%= f.input :is_enabled, as: :fui_boolean, wrapper: :fui_boolean %>

  <%= f.button :submit, class: 'btn-primary col-sm-offset-2' %> or <%= link_to 'cancel', risk_plans_path, class: 'btn-link' %>



<% end %>
