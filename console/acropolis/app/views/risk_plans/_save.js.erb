$("ul.errors").html("")
<% if @risk_plan.errors.any? %>
  <% @risk_plan.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  if ($('#risk-plan-detail').length) {
    $('#risk-plan-detail').html("<%= escape_javascript(render 'risk_plan_detail') %>");
  }

  if ($('#risk-plan-list').length) {
    $('#risk-plan-list').html("<%= escape_javascript(render 'risk_plans_grid') %>");
  }

  $("#item-modal").modal("hide");
<% end %>