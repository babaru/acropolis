<%= grid(@risk_plans_grid, allow_showing_all_records: false) do |g|

  g.column :name => '#' do |risk_plan|
    risk_plan.id
  end
  g.column :name => t('activerecord.attributes.risk_plan.name') do |risk_plan|
    link_to risk_plan.name, risk_plan_risk_plan_operations_path(risk_plan)
  end
  g.column name: t('activerecord.attributes.risk_plan.operation_count') do |risk_plan|
    risk_plan.risk_plan_operations.count
  end
  g.column :name => t('activerecord.attributes.risk_plan.created_by') do |risk_plan|
    risk_plan.created_by.full_name
  end

  g.column html: {class: 'btn-cell'} do |risk_plan|
    link_to fa_icon("pencil"), edit_risk_plan_path(risk_plan), class: 'btn btn-default btn-xs', remote: true, data: {toggle: 'tooltip'}, title: t('buttons.edit')
  end

  g.column html: {class: 'btn-cell'} do |risk_plan|
    link_to fa_icon("trash"), risk_plan_delete_path(risk_plan), class: 'btn btn-danger btn-xs', remote: true, data: {toggle: 'tooltip'}, title: t('buttons.delete')
  end
end -%>
