<% hide_sidebar = false if local_assigns[:hide_sidebar].nil? %>

<% content_for :page_title do %>

<%= t('models.list', model: RiskPlan.model_name.human) %>

<% end %>

<% unless hide_sidebar %>

<% content_for :sidebar do %>

<%= render partial: 'risk_plans_sidebar_menu' %>

<% end %>

<% end %>

<% content_for :anything_else do %>

<!-- Modal -->

<div class="modal fade" id="item-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

</div><!-- /.modal -->

<% end %>

<div class="ibox no-drop">
  <div class="ibox-title">
    <div class="btn-toolbar">
      <div class="btn-group">
        <%= link_to(fa_icon('plus-square', text: t('models.add', model: RiskPlan.model_name.human)), new_risk_plan_path, remote: true, class: 'btn btn-primary btn-sm') %>
      </div>
    </div>
  </div>

  <div class="ibox-content">
    <div id="item-list">

      <%= render 'risk_plans_grid' %>

    </div>
  </div>

</div>
