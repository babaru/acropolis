<% hide_sidebar = false if local_assigns[:hide_sidebar].nil? %>

<% content_for :page_title do %>

<%= t('models.list', model: RiskPlan.model_name.human) %>

<% end %>

<% unless hide_sidebar %>

<% content_for :sidebar do %>

<%= render partial: 'risk_plans_sidebar_menu' %>

<% end %>

<% end %>

<% content_for :anything_else do %>

<!-- Modal -->

<div class="modal fade" id="item-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

</div><!-- /.modal -->

<% end %>

<div class="ibox no-drop">
  <div class="ibox-title">
    <div class="btn-toolbar">
      <div class="btn-group">
        <%= link_to(fa_icon('plus-square', text: t('models.add', model: RiskPlan.model_name.human)), new_risk_plan_path, remote: true, class: 'btn btn-primary btn-sm') %>
      </div>
    </div>
  </div>

  <div class="ibox-content">
    <div id="item-list">

      <%= render 'risk_plans_grid' %>

    </div>
  </div>

</div>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#item-modal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

