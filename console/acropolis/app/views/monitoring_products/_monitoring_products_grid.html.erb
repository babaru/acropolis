<%= grid(@monitoring_products_grid, :show_filters => :when_filtered) do |g|

  g.column name: t('activerecord.attributes.monitoring_product.product_id') do |monitoring_product|
    monitoring_product.product.name
  end

  g.column name: t('activerecord.attributes.monitoring_product.created_at') do |monitoring_product|
    monitoring_product.created_at
  end


  g.column name: t('activerecord.attributes.monitoring_product.updated_at') do |monitoring_product|
    monitoring_product.updated_at
  end



  g.column html: {class: 'btn-cell'} do |monitoring_product|
    link_to fa_icon("pencil"), edit_monitoring_product_path(monitoring_product), class: 'btn btn-default btn-xs', remote: true, data: {toggle: 'tooltip'}, title: t('buttons.edit')
  end

  g.column html: {class: 'btn-cell'} do |monitoring_product|
    link_to fa_icon("trash"), monitoring_product_delete_path(monitoring_product), class: 'btn btn-danger btn-xs', remote: true, data: {toggle: 'tooltip'}, title: t('buttons.delete')
  end
end -%>
