
<div class="row">
  <div class="col-md-4">
    <div class="icon"><%= image_tag "icons/imac.svg" %></div>
    <div class="info">
      <h2 class="alone"><%= t('navigation.page.monitoring') %></h2>
    </div>
  </div>
  <div class="col-md-4"><div class="text-center auto-refresh-switcher"><span style="display: inline-block;"><%= t('buttons.auto_refresh') %></span> <%= link_to(content_tag(:div, check_box_tag("checkbox-auto-refresh", nil, nil, data: {toggle: 'switch', 'on-text' => '<span class="fui-check"></span>', 'off-text' => '<span class="fui-cross"></span>'}), class: 'bootstrap-switch-square'), 'javascript:auto_refresh_toggle();', style: 'display:inline-block;') %></div></div>
  <div class="col-md-4">

    <div class="btn-toolbar pull-right">

      <div class="btn-group">
        <%= link_to fa_icon('th-large'), dashboard_switch_monitor_layout_path(style: :panel), remote: true, class: 'btn btn-default switch-monitor-layout-panel-btn active' %>
        <%= link_to fa_icon('reorder'), dashboard_switch_monitor_layout_path(style: :list), remote: true, class: 'btn btn-default switch-monitor-layout-list-btn' %>
      </div>

      <div class="btn-group">
        <button data-toggle="dropdown" class="btn btn-primary dropdown-toggle" type="button"><%= fa_icon('cog') %> <span class="caret"></span></button>
        <ul role="menu" class="dropdown-menu pull-right">

          <li><a href="#"><%= fa_icon('ban') %> Stop auto refresh</a></li>
          <li><a href="#"><%= fa_icon('refresh') %> Auto refresh</a></li>
          <li class="divider"></li>
          <li><a href="#">Separated link</a></li>
        </ul>
      </div>

    </div>

  </div>
</div>

