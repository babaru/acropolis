<% hide_sidebar = false if local_assigns[:hide_sidebar].nil? %>

<% content_for :page_title do %>

<%= Bank.model_name.human %>

<% end %>

<% unless hide_sidebar %>

<% content_for :sidebar do %>

<%= render partial: 'banks_sidebar_menu' %>

<% end %>

<% end %>

<% content_for :anything_else do %>

<!-- Modal -->

<div class="modal fade" id="item-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
</div><!-- /.modal -->

<% end %>

<div class="page-header">
  <div class="row">
    <div class="col-sm-6">
      <h2><%= t('models.list', model: Bank.model_name.human) %></h2>
    </div>
    <div class="col-sm-6">
      <div class="btn-toolbar">
        <div class="btn-group pull-right">
          <%= link_to(fa_icon('plus', text: t('models.new', model: Bank.model_name.human)), new_bank_path, remote: true, class: 'btn btn-primary') %>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="item-list">

  <%= render 'banks_grid' %>

</div>