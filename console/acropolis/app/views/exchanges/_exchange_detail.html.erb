<div class="row">
    <div class="col-lg-12">
        <div class="m-b-md">
            <%= link_to t('models.edit', model: Exchange.model_name.human), edit_exchange_path(@exchange), remote: true, class: 'btn btn-white btn-xs pull-right' %>
            <h2><%= @exchange.full_cn_name %> (<%= @exchange.name %>)</h2>
        </div>
        <dl class="dl-horizontal">

        </dl>
    </div>
</div>
<div class="row">
    <div class="col-lg-5">
        <dl class="dl-horizontal">
            <dt><%= t('activerecord.attributes.exchange.currency_unit') %></dt> <dd><%= @exchange.currency_unit %></dd>
        </dl>
    </div>
    <div class="col-lg-7" id="cluster_info">
        <dl class="dl-horizontal">

            <dt><%= t('activerecord.attributes.time_stamp.updated_at') %></dt> <dd><%= @exchange.updated_at.strftime('%Y-%m-%d %H:%M:%S') %></dd>
            <dt><%= t('activerecord.attributes.time_stamp.created_at') %></dt> <dd><%= @exchange.created_at.strftime('%Y-%m-%d %H:%M:%S') %></dd>
        </dl>
    </div>
</div>