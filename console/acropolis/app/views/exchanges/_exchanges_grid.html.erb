<%= grid(@exchanges_grid, :show_filters => :when_filtered) do |g|

  g.column name: '#' do |exchange|
    exchange.id
  end


  g.column name: t('activerecord.attributes.exchange.name'), class: 'project-title' do |exchange|
    [
      link_to(exchange.name, exchange_path(exchange)),
      content_tag(:small, "#{t('labels.last_modified_at')} #{exchange.updated_at.strftime('%Y-%m-%d %H:%M:%S')}")
    ].join('<br/>').html_safe
  end

  g.column name: t('activerecord.attributes.exchange.full_cn_name') do |exchange|
    exchange.full_cn_name
  end


  g.column name: t('activerecord.attributes.exchange.short_cn_name') do |exchange|
    exchange.short_cn_name
  end


  g.column name: t('activerecord.attributes.exchange.full_en_name') do |exchange|
    exchange.full_en_name
  end


  g.column name: t('activerecord.attributes.exchange.short_en_name') do |exchange|
    exchange.short_en_name
  end

  g.column name: t('activerecord.attributes.exchange.currency_unit') do |exchange|
    exchange.currency_unit
  end


  g.column html: {class: 'project-actions'} do |exchange|
    [
      link_to(fa_icon("pencil"), edit_exchange_path(exchange), class: 'btn btn-white btn-sm', remote: true, data: {toggle: 'tooltip'}, title: t('buttons.edit')),
      link_to(fa_icon("trash"), exchange_delete_path(exchange), class: 'btn btn-white btn-sm', remote: true, data: {toggle: 'tooltip'}, title: t('buttons.delete'))
    ].join(' ').html_safe
  end
end -%>
