<%= grid(@trading_account_risk_plans_grid, :show_filters => :when_filtered) do |g|

  g.column name: '#' do |trading_account_risk_plan|
    trading_account_risk_plan.id
  end

  g.column name: t('activerecord.attributes.trading_account_risk_plan.risk_plan_id') do |trading_account_risk_plan|
    trading_account_risk_plan.risk_plan.name
  end

  g.column name: t('activerecord.attributes.trading_account_risk_plan.is_enabled') do |trading_account_risk_plan|
    link_to(check_box_tag("checkbox-#{trading_account_risk_plan.id}", nil, trading_account_risk_plan.is_enabled, class: 'js-switch'), trading_account_risk_plan_enable_path(trading_account_risk_plan), method: :post, remote: true)
  end

  g.column html: {class: 'project-actions'} do |trading_account_risk_plan|
    link_to fa_icon("trash"), trading_account_risk_plan_delete_path(trading_account_risk_plan), class: 'btn btn-white btn-sm', remote: true, data: {toggle: 'tooltip'}, title: t('buttons.delete')
  end
end -%>
