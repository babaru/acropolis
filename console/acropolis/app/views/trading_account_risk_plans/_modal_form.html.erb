<%= simple_form_for(@trading_account_risk_plan.becomes(TradingAccountRiskPlan), remote: true, html: {class: 'form-horizontal'}) do |f| %>

  <% @trading_account_risk_plan.becomes(@trading_account_risk_plan.class) %>

  <div class="modal-body">

  <%= f.error_notification %>

    <%= f.input :trading_account_id, as: :hidden %>

    <%= f.input :risk_plan_id, collection: RiskPlan.all.collect {|p| [p.name, p.id]}  %>

    <%= f.input :begun_at, as: :date_picker %>
    <%= f.input :ended_at, as: :date_picker %>

    <%= f.input :is_enabled %>

    <%= f.input :type, as: :hidden %>

  </div>

  <div class="modal-footer">

  <%= link_to t('buttons.cancel'), "#", class: "btn btn-default btn-sm", data: {dismiss: "modal"} %>
  <%= f.submit t('buttons.save_changes'), class: 'btn btn-primary btn-sm' %>

  </div>

<% end %>

<script type="text/javascript">

(function ($) {

  $(function () {

    $('.date-picker').datetimepicker();

    // Checkbox style
    $('.i-checks').iCheck({
        checkboxClass: 'icheckbox_square-green',
        radioClass: 'iradio_square-green',
    });

  });

}(jQuery));

</script>