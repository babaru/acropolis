<%= simple_form_for(@trading_summary, remote: true, html: {class: 'form-horizontal'}) do |f| %>

  <div class="modal-body">

  <%= f.error_notification %>

    <%= f.input :trading_date, as: :date_picker, input_html: { value: @trading_summary.trading_date.strftime('%Y-%m-%d')} %>

    <%= f.input :exchange_id, collection: Exchange.all.map{|exchange| [exchange.name, exchange.id]} %>

    <%= f.input :balance, as: :string %>

    <%= f.input :capital, as: :string %>

    <%= f.input :trading_account_id, as: :hidden %>

  </div>

  <div class="modal-footer">

  <%= link_to t('buttons.cancel'), "#", class: "btn btn-default btn-sm", data: {dismiss: "modal"} %>
  <%= f.submit t('buttons.save_changes'), class: 'btn btn-primary btn-sm' %>

  </div>

<% end %>

<script type="text/javascript">

(function ($) {

  $(function () {

    $('.date-picker').datetimepicker({format: 'yyyy-MM-dd'});

  });

}(jQuery));

</script>