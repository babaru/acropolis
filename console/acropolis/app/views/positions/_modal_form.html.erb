<%= simple_form_for(@position, remote: true, html: {class: 'form-horizontal'}) do |f| %>

  <div class="modal-body">

  <%= f.error_notification %>

            
    <%= f.input :order_side %>
          
    <%= f.input :volume %>
          
    <%= f.input :trade_price %>
          
    <%= f.input :instrument_id %>
          
    <%= f.input :trading_account_id %>
                  
  </div>

  <div class="modal-footer">

  <%= link_to t('buttons.cancel'), "#", class: "btn btn-default btn-sm", data: {dismiss: "modal"} %>
  <%= f.submit t('buttons.save_changes'), class: 'btn btn-primary btn-sm' %>

  </div>

<% end %>

