<%= grid(@brokers_grid, :show_filters => :when_filtered) do |g|

  g.column name: '#' do |broker|
    broker.id
  end
  

  g.column name: t('activerecord.attributes.broker.name') do |broker|
    
    link_to(broker.name, broker_path(broker))
    
  end


  g.column name: t('activerecord.attributes.broker.created_at') do |broker|
    
    broker.created_at
    
  end


  g.column name: t('activerecord.attributes.broker.updated_at') do |broker|
    
    broker.updated_at
    
  end



  g.column html: {class: 'btn-cell'} do |broker|
    link_to fa_icon("pencil"), edit_broker_path(broker), class: 'btn btn-default btn-xs', remote: true, data: {toggle: 'tooltip'}, title: t('buttons.edit')
  end

  g.column html: {class: 'btn-cell'} do |broker|
    link_to fa_icon("trash"), broker_delete_path(broker), class: 'btn btn-danger btn-xs', remote: true, data: {toggle: 'tooltip'}, title: t('buttons.delete')
  end
end -%>
