$("ul.errors").html("")
<% if @client.errors.any? %>
  <% @client.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>

  if ($('#client-detail').length) {
    $('#client-detail').html("<%= escape_javascript(render 'client_detail') %>")
  }

  if ($('#client-list').length) {
    $('#client-list').html("<%= escape_javascript(render 'clients_grid') %>")
  }

  $("#item-modal").modal("hide")

<% end %>