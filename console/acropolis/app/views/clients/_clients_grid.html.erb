<%= grid(@clients_grid, :show_filters => :when_filtered) do |g|

  g.column name: '#' do |client|
    client.id
  end

  g.column name: t('activerecord.attributes.client.name'), class: 'project-title' do |client|
    link_to(client.name, client_path(client))
  end

  g.column html: {class: 'project-actions'} do |client|
    [
      link_to(fa_icon("pencil"), edit_client_path(client), class: 'btn btn-white btn-sm', remote: true, data: {toggle: 'tooltip'}, title: t('buttons.edit')),
      link_to(fa_icon("trash"), client_delete_path(client), class: 'btn btn-white btn-sm', remote: true, data: {toggle: 'tooltip'}, title: t('buttons.delete'))
    ].join(' ').html_safe
  end
end -%>
