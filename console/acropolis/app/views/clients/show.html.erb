<% content_for :page_title do %>

<%= t('models.show', model: Client.model_name.human) %>

<% end %>

<% content_for :anything_else do %>

<!-- Modal -->

<div class="modal fade" id="item-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
</div><!-- /.modal -->

<% end %>

<div class="ibox">
  <div class="ibox-content">
      <div id="client-detail">
        <%= render partial: 'client_detail' %>
      </div>
      <div class="row m-t-sm">
        <div class="col-lg-12">
          <div class="panel blank-panel">
            <div class="panel-heading">
                <div class="panel-options">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#tab-1" data-toggle="tab"><%= t('models.list', model: TradingAccount.model_name.human) %></a></li>
                        <!-- <li class=""><a href="#tab-2" data-toggle="tab"><%= t('models.list', model: Product.model_name.human) %></a></li> -->
                    </ul>
                </div>
            </div>

            <div class="panel-body">

              <div class="tab-content">

                <div class="tab-pane active" id="tab-1">

                  <div class="btn-toolbar">
                    <div class="btn-group pull-right">
                    <%= link_to(fa_icon('plus-square', text: t('models.add', model: TradingAccount.model_name.human)), new_client_trading_account_path(@client), remote: true, class: 'btn btn-primary btn-sm') %>
                    </div>
                  </div>

                  <div id="trading_account-list" class="tooltip-demo project-list">

                    <%= render partial: 'products/trading_accounts_grid' %>

                  </div>

                </div>

                <div class="tab-pane" id="tab-2">

                  <div class="btn-toolbar">
                    <div class="btn-group pull-right">
                    <%= link_to(fa_icon('plus-square', text: t('models.add', model: Product.model_name.human)), new_client_product_path(@client), remote: true, class: 'btn btn-primary btn-sm') %>
                    </div>
                  </div>

                  <div id="product-list" class="tooltip-demo project-list">

                    <%= render partial: 'products_grid' %>

                  </div>

                </div>
              </div>

            </div>

          </div>
        </div>
      </div>
  </div>
</div>

