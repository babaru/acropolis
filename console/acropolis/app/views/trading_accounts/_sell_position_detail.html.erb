<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th><%= t('activerecord.attributes.trade.open_volume') %></th>
        <th><%= t('activerecord.attributes.trade.trade_price') %></th>
        <th><%= t('activerecord.attributes.trade.order_side') %></th>
        <th><%= t('activerecord.attributes.instrument.market_price') %></th>
        <th class="text-right"><%= t('activerecord.attributes.trade.exchange') %></th>
        <th class="text-right"><%= t('activerecord.attributes.trade.instrument') %></th>
    </tr>
    </thead>
    <tbody>
    <% @sell_positions.each do |trade| %>
    <tr>
        <td><%= trade.open_volume %></td>
        <td><%= render_trade_price(trade.traded_price, {unit: trade.instrument.trading_symbol.currency.symbol}) %></td>
        <td><%= render_order_side(trade.order_side) %></td>
        <td><%= render_market_price(trade.instrument.latest_price, {unit: trade.instrument.trading_symbol.currency.symbol}) %></td>
        <td class="text-right"><%= trade.instrument.exchange_instrument_code %></td>
        <td class="text-right"><%= trade.instrument.exchange.name %></td>
    </tr>
    <% end %>
    </tbody>
</table>
