<div id="trading-account-trading-records-grid" class="tooltip-demo">
    <div class="btn-toolbar">
      <div class="btn-group">
        <% %w(all position close).each do |oc| %>
        <%= link_to t("navigation.tab.trading_account.oc.#{oc}"), trading_account_path(@trading_account, @query_params.merge(oc: oc)), class: "btn btn-white btn-sm #{@current_oc == oc.to_sym ? 'active': ''}" %>
        <% end %>
      </div>

      <div class="btn-group pull-right">
          <%= link_to t('models.upload', model: Trade.model_name.human), trading_account_uploading_clearing_trades_file_path(@trading_account, trading_date: @trading_date), remote: true, class: 'btn btn-primary btn-sm' %>
      </div>
    </div>

    <%= render partial: 'trades_grid' %>
</div>