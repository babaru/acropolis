<div class="row">
    <div class="col-lg-12">
        <div class="m-b-md">
            <%= link_to t('models.edit', model: TradingAccount.model_name.human), edit_trading_account_path(@trading_account), remote: true, class: 'btn btn-white btn-xs pull-right' %>
            <h2><%= @trading_account.name %></h2>
        </div>
        <div class="row">
            <div class="col-lg-5">
                <dl class="dl-horizontal">
                    <dt><%= t('activerecord.attributes.trading_account.account_no') %></dt>
                    <dd><%= @trading_account.account_no %></dd>
                </dl>
            </div>
            <div class="col-lg-7">
                <dl class="dl-horizontal">
                    <dt><%= t('activerecord.attributes.time_stamp.updated_at') %></dt> <dd><%= @trading_account.updated_at.strftime('%Y-%m-%d %H:%M:%S') %></dd>
                    <dt><%= t('activerecord.attributes.time_stamp.created_at') %></dt> <dd><%= @trading_account.created_at.strftime('%Y-%m-%d %H:%M:%S') %></dd>
                </dl>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-5">
        <dl class="dl-horizontal">
            <dt><%= t('activerecord.attributes.trading_account.budget') %></dt> <dd><%= @trading_account.budget %></dd>
            <dt><%= t('activerecord.attributes.trading_summary.net_worth') %></dt> <dd><%= @trading_account.trading_summary.nil? ? 'N/A' : @trading_account.trading_summary.net_worth %></dd>
            <dt><%= t('activerecord.attributes.trading_summary.customer_benefit') %></dt> <dd><%= @trading_account.trading_summary.nil? ? 'N/A' : @trading_account.trading_summary.customer_benefit %></dd>
            <dt><%= t('activerecord.attributes.trading_summary.exposure') %></dt> <dd><%= @trading_account.trading_summary.nil? ? 'N/A' : @trading_account.trading_summary.exposure %></dd>
        </dl>
    </div>
    <div class="col-lg-7" id="cluster_info">
        <dl class="dl-horizontal">
            <dt><%= t('activerecord.attributes.trading_summary.balance') %></dt> <dd><%= @trading_account.trading_summary.nil? ? 'N/A' : @trading_account.trading_summary.balance %></dd>
            <dt><%= t('activerecord.attributes.trading_summary.leverage') %></dt> <dd><%= @trading_account.trading_summary.nil? ? 'N/A' : @trading_account.trading_summary.leverage %></dd>
            <dt><%= t('activerecord.attributes.trading_summary.margin') %></dt> <dd><%= @trading_account.trading_summary.nil? ? 'N/A' : @trading_account.trading_summary.margin %></dd>
            <dt><%= t('activerecord.attributes.trading_summary.profit') %></dt> <dd><%= @trading_account.trading_summary.nil? ? 'N/A' : @trading_account.trading_summary.profit %></dd>
        </dl>
    </div>
</div>