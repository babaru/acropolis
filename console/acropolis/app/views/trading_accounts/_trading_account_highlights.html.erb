<div class="row">
    <div class="col-lg-2">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <span class="pull-right"><%= render_trading_status(@trading_account) %></span>
                <h5><%= t('activerecord.attributes.trading_account.net_worth') %></h5>
            </div>
            <div class="ibox-content">
                <h1 class="no-margins"><%= @trading_account.net_worth %></h1>
                <div class="stat-percent font-bold text-success"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <span class="label label-success pull-right"></span>
                <h5><%= t('activerecord.attributes.trading_account.balance') %> (<%= t('activerecord.attributes.trading_account.capital') %>)</h5>
            </div>
            <div class="ibox-content">
                <h1 class="no-margins"><%= @trading_account.balance %> (<%= @trading_account.capital %>)</h1>
                <div class="stat-percent font-bold text-success"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-2">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <span class="label label-success pull-right"></span>
                <h5><%= t('activerecord.attributes.trading_account.profit') %></h5>
            </div>
            <div class="ibox-content">
                <h1 class="no-margins"><%= @trading_account.profit %></h1>
                <div class="stat-percent font-bold text-success"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-2">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <span class="label label-success pull-right"></span>
                <h5><%= t('activerecord.attributes.trading_account.leverage') %></h5>
            </div>
            <div class="ibox-content">
                <h1 class="no-margins"><%= render_decimal(@trading_account.leverage) %></h1>
                <div class="stat-percent font-bold text-success"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-2">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <span class="label label-success pull-right"></span>
                <h5><%= t('activerecord.attributes.trading_account.exposure') %></h5>
            </div>
            <div class="ibox-content">
                <h1 class="no-margins"><%= @trading_account.exposure %></h1>
                <div class="stat-percent font-bold text-success"></div>
            </div>
        </div>
    </div>
</div>