<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title"><%= t('models.query', model: TradingSummary.model_name.human) %></h4>
        </div>

        <%= simple_form_for(:trading_summary, url: trading_account_queried_by_date_path(@trading_account, @query_params), method: :post, html: {class: 'form-horizontal'}) do |f| %>
        <%= f.error_notification %>
        <div class="modal-body">
            <%= f.input :trading_date, label: t('activerecord.attributes.trading_summary.trading_date'), as: :date_picker, required: false, input_html: {value: @trading_date.strftime('%Y-%m-%d')} %>
        </div>
        <div class="modal-footer">
            <%= link_to t('buttons.cancel'), "#", class: "btn btn-default btn-sm", data: {dismiss: "modal"} %>
            <%= f.submit t('buttons.save_changes'), class: 'btn btn-primary btn-sm' %>
        </div>
        <% end %>

    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->

<script type="text/javascript">

(function ($) {

$(function () {

    $('.date-picker').datetimepicker();

});

}(jQuery));

</script>