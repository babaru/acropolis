<% sidebar = true if local_assigns[:sidebar].nil? %>
<% breadcrumb = true if local_assigns[:breadcrumb].nil? %>

<div class="block push">
  <div class="wrapper">
    <div class="block push">

      <% if sidebar %>

      <div id="sidebar" class="cell">
        <%= yield :sidebar %>
      </div><!-- #sidebar -->

      <% end %>

      <div id="main" class="cell">

        <% if breadcrumb %>

        <div class="breadcrumb">
          <%= render_breadcrumbs :separator => " #{fa_icon('angle-right')} " %>
        </div>

        <% end %>

        <%= yield %>

      </div> <!-- #main -->

    </div>
  </div>
</div>