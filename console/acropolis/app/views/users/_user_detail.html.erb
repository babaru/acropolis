
<div class="row">
    <div class="col-lg-12">
        <div class="m-b-md">
            <div class="btn-toolbar pull-right tooltip-demo">
                <%= link_to t('models.edit', model: User.model_name.human), edit_user_path(@user), remote: true, class: 'btn btn-white btn-xs' %>
            </div>

            <h2><%= @user.full_name %> <%= t('models.show', model: User.model_name.human) %></h2>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <dl class="dl-horizontal">
                    <dt><%= t('activerecord.attributes.user.name') %></dt>
                    <dd class="text-right"><%= @user.name %></dd>
                    <dt><%= t('activerecord.attributes.user.last_sign_in_at') %></dt>
                    <dd class="text-right"><%= @user.last_sign_in_at.strftime('%Y-%m-%d %H:%M:%S') %></dd>
                    <dt><%= t('activerecord.attributes.user.sign_in_count') %></dt>
                    <dd class="text-right"><%= @user.sign_in_count %></dd>
                </dl>
            </div>
            <div class="col-lg-6">
                <dl class="dl-horizontal">
                    <dt><%= t('activerecord.attributes.user.full_name') %></dt>
                    <dd class="text-right"><%= @user.full_name %></dd>
                    <dt><%= t('activerecord.attributes.user.last_sign_in_ip') %></dt>
                    <dd class="text-right"><%= @user.last_sign_in_ip %></dd>
                </dl>
            </div>
        </div>
        <div class="row">

        </div>
    </div>
</div>

