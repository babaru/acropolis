$("ul.errors").html("")
<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $('#item-list').html("<%= escape_javascript(render 'users_grid') %>")
  $("#item-modal").modal("hide")
  draw_flat_ui();
<% end %>