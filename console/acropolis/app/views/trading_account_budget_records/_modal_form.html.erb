<%= simple_form_for(@trading_account_budget_record, remote: true, html: {class: 'form-horizontal'}) do |f| %>

  <div class="modal-body">

  <%= f.error_notification %>


    <%= f.input :trading_account_id, as: :hidden %>

    <%= f.input :type, collection: [TradingAccountBudgetInRecord, TradingAccountBudgetOutRecord].map {|item| [item.model_name.human, item.name]} %>

    <%= f.input :money, as: :string %>

  </div>

  <div class="modal-footer">

  <%= link_to t('buttons.cancel'), "#", class: "btn btn-default btn-sm", data: {dismiss: "modal"} %>
  <%= f.submit t('buttons.save_changes'), class: 'btn btn-primary btn-sm' %>

  </div>

<% end %>

