<%= simple_form_for(@trading_account_instrument, remote: true, html: {class: 'form-horizontal'}) do |f| %>

  <div class="modal-body">

  <%= f.error_notification %>


    <%= f.input :trading_account_id, as: :hidden %>

    <%= f.input :instrument_id, collection: Instrument.all.collect {|i| [i.name, i.id]} %>

  </div>

  <div class="modal-footer">

  <%= link_to t('buttons.cancel'), "#", class: "btn btn-default btn-sm", data: {dismiss: "modal"} %>
  <%= f.submit t('buttons.save_changes'), class: 'btn btn-primary btn-sm' %>

  </div>

<% end %>

