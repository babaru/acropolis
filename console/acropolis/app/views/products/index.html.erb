<% content_for :plate_title_panel do %>

<%= render partial: 'products/product_list_panel' %>

<% end %>

<% content_for :sidebar do %>

<%= render partial: 'products/product_sidebar_menu', locals: {product: @current_product} %>

<% end %>

<% content_for :anything_else do %>

<!-- Modal -->

<div class="modal fade" id="product-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
</div><!-- /.modal -->

<% end %>

<div class="page-header">
  <h2><%= t('navigation.page.product_list') %></h2>
</div>

<div class="btn-toolbar">

  <div class="btn-group pull-right">
    <%= link_to(fa_icon('plus', text: t('models.new', model: Product.model_name.human)), new_product_path, remote: true, class: 'btn btn-primary btn-sm') %>
  </div>
</div>

<p></p>

<div id="product-list">

  <%= render 'products_grid' %>

</div>