  <h2><%= t('navigation.page.risk_plan_list') %></h2>
</div>

<div class="btn-toolbar">

  <div class="btn-group pull-right">
    <%= link_to(fa_icon('plus', text: t('models.new', model: ProductRiskPlan.model_name.human)), new_product_risk_plan_path(product_id: @product.id), remote: true, class: 'btn btn-primary btn-sm') %>
