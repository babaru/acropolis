<%= grid(@binding_risk_plans_grid, :show_filters => :when_filtered) do |g|

  g.column name: '#' do |binding_risk_plan|
    binding_risk_plan.id
  end

  g.column name: t('activerecord.attributes.product_risk_plan.risk_plan_id') do |binding_risk_plan|
    binding_risk_plan.risk_plan.name
  end

  g.column name: t('activerecord.attributes.product_risk_plan.is_enabled') do |binding_risk_plan|
    link_to(check_box_tag("checkbox-#{binding_risk_plan.id}", nil, binding_risk_plan.is_enabled, data: {toggle: 'switch'}), product_risk_plan_enable_path(binding_risk_plan), method: :post, remote: true)
  end

  g.column html: {class: 'project-actions'} do |binding_risk_plan|
    link_to fa_icon("trash"), product_risk_plan_delete_path(binding_risk_plan), class: 'btn btn-white btn-sm', remote: true, data: {toggle: 'tooltip'}, title: t('buttons.delete')
  end
end -%>
