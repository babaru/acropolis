<%= simple_form_for(@product, remote: true, html: {class: 'form-horizontal'}) do |f| %>

  <div class="modal-body">

  <%= f.error_notification %>


    <%= f.input :name %>

    <%= f.input :client_id, collection: Client.all.collect {|item| [item.name, item.id]} %>

    <%= f.input :broker_id, collection: Broker.all.collect {|item| [item.name, item.id]} %>

    <%= f.input :bank_id, collection: Bank.all.collect {|item| [item.name, item.id]} %>

    <%= f.input :budget %>

  </div>

  <div class="modal-footer">

  <%= link_to t('buttons.cancel'), "#", class: 'btn btn-default btn-sm', data: {dismiss: "modal"} %>
  <%= f.submit t('buttons.save_changes'), class: 'btn btn-primary btn-sm' %>

  </div>

<% end %>

