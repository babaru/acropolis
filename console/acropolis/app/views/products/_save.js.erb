$("ul.errors").html("")
<% if @product.errors.any? %>
  <% @product.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $('#product-list').html("<%= escape_javascript(render 'products_grid') %>")
  $("#product-modal").modal("hide")
  draw_flat_ui();
<% end %>